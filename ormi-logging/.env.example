# ORMI API Configuration
ORMI_API_KEY=<YOUR_ORMI_API_KEY>
ORMI_BASE_URL=https://api.subgraph.somnia.network

# Application Configuration
NODE_ENV=development
PORT=3000

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=logs

# Health Monitoring Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# API Client Configuration
API_TIMEOUT=10000
MAX_RETRIES=3
RETRY_DELAY=1000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
CORS_ORIGIN=http://localhost:3000
API_KEY_HEADER=x-api-key

# Somnia Network Configuration
SOMNIA_NETWORK=testnet
SOMNIA_CHAIN_ID=2648
SOMNIA_RPC_URL=https://rpc.somnia.network

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_INTERVAL=60000
ALERT_THRESHOLD_ERROR_RATE=10
ALERT_THRESHOLD_RESPONSE_TIME=3000